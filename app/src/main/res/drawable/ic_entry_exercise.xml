<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/mat_light_blue_300"
                android:endColor="@color/mat_light_blue_500"
                android:type="radial"
                android:centerX="50%"
                android:centerY="50%"
                android:gradientRadius="100%"
                />
            <size
                android:width="200dp"
                android:height="200dp"
                />
            <corners
                android:radius="25dp"/>
        </shape>
    </item>
    <item
        android:drawable="@drawable/ic_baseline_fitness_center_24"
        android:top="25dp"
        android:bottom="25dp"
        android:left="25dp"
        android:right="25dp"
    />
</layer-list>
